{
  "name": "CPL Enhancer",
  "description": "Quality-of-life enhancements for CPLManager (tryouts, market, roster insights).",
  "version": "0.1.0",
  "manifest_version": 3,

  "action": {
    "default_title": "CPL Enhancer",
    "default_popup": "popup/popup.html"
  },

  "options_page": "options/options.html",

  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },

  "permissions": ["storage", "activeTab", "scripting"],

  "host_permissions": [
    "https://cplmanager.com/*",
    "https://www.cplmanager.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://cplmanager.com/*",
        "https://www.cplmanager.com/*"
      ],
      "js": [
        "content/core/dom.js",
        "content/core/page.js",
        "content/core/storage.js",
        "content/features/transferTabs.js",
        "content/features/transferBadges.js",
        "content/features/ageHighlights.js",
        "content/main.js"
      ],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ]
}
